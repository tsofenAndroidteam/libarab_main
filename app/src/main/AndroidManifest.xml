<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.libarab.michaelg.libarab">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcherapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        tools:replace="android:icon"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ListviewActivity.ListviewActivity"
            android:theme="@style/AppTheme2"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/listView_title" />
        <activity
            android:name=".Item.ViewPagerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Item.BookinfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <fragment android:name="com.example.michaelg.myapplication.Fragments.MenuFragment"
            android:id="@+id/fragment_menu2"
            />
        <activity
            android:name=".SignUp"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.AddQuestion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.ConceptActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.Create"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.Leader"
            android:theme="@style/AppTheme3"
            android:label="LeaderBoard" />
        <activity
            android:name=".Trivia.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.Progress"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Trivia.ResultActivity"
            android:theme="@style/AppTheme3"
            android:label="Result"/>
        <activity
            android:name=".Trivia.Start"
            android:theme="@style/AppTheme3"
            android:label="Trivia"/>
        <activity
            android:name=".Trivia.StartQuiz"
            android:theme="@style/AppTheme3" />
        <activity
            android:name=".Trivia.ViewAnswerActivity"
            android:theme="@style/AppTheme3"
            android:label="Quiz Answers"/>
        <activity android:name=".Trivia.About"
            android:theme="@style/AppTheme3"
            />
        <activity android:name=".Trivia.triviaListview"
            android:theme="@style/AppTheme3"
            android:label="Quizzes List"/>
        <activity android:name=".favorites.MainActivity" />
        <activity android:name=".favorites.BaseActivity" />
        <activity android:name=".favorites.BookInfoActivity" />
        <activity android:name=".Trivia.triviaListview2"></activity>
    </application>

</manifest>